#canvas {
}
@font-face {
	font-family: 'Reggae One', cursive; 
	src: url(ReggaeOne-Regular.ttf); 
}
html {
  height:100%;
background-image: url(https://st2.depositphotos.com/3638669/10150/v/450/depositphotos_101506990-stock-illustration-dogs-paw-print-background-seamless.jpg);
-moz-user-select: none;
-khtml-user-select: none;
user-select: none;    
}

body {
  line-height: 300%;
}

.Mark
{
display:table-cell;
vertical-align:bottom;
font-size:30px;
color:#ffffff;
text-shadow: 1px 0 1px #000, 
0 1px 1px #000, 
-1px 0 1px #000, 
0 -1px 1px #000;
}

button 
{
  display: inline-block;
  font-size:40px ;
  font-weight:100;
  color: white;
  text-decoration: none;
  padding: .5em 2em;
  outline: none;
  border-width: 2px 0;
  border-style: solid none;
  border-color: #555555;
  border-radius: 0px;
  background: linear-gradient(#555555, #555555) #555555;
  transition: 0.2s;
}
.Text_block {
    margin: 5px 5px 5px 5px;
	width:100%;
	height:100px;
    padding: 10px 10px;
  position:relative;
    font-size: 60px;
	line-height: 10%;
    background: #efefef;
    color: #000;
}
.Text_block2 {
	text-align: center;
    margin: 5px 5px 5px 5px;
	position:relative;
	width:100%;
	height:100%;
    padding: 10px 10px;
    font-size: 60px;
	line-height: 80%;
    background: #dfdfdf;
    color: #000;
}

.content {
  font-size: 50px; 
  background-color:rgba(200,200,200,.9);
  border-radius:.0em;
  -webkit-box-shadow:0 0 .25em rgba(0,0,0,.25);
          box-shadow:0 0 .25em rgba(0,0,0,.25);
  -webkit-box-sizing:border-box;
          box-sizing:border-box;
  left:50%;
  padding:10vmin;
  position:fixed;
  text-align:center;
  top:50%;
  -webkit-transform:translate(-50%, -50%);
      -ms-transform:translate(-50%, -50%);
          transform:translate(-50%, -50%);

}
